<!DOCTYPE html>
<html>
  <head>
    <title>Content Management<%= "| #{@page_title}" if @page_title %></title>
    <%= javascript_include_tag('application', 'data-turbolinks-tracks' => true) %>
    <%= stylesheet_link_tag('application', :media => 'all') %>

  </head>
  <body>
    <div id="header">
      <h1>Content Management</h1>
    </div>
    <div id="main">
      <div id="navigation"> 
        <%= render(:partial => "layouts/navigation", :locals => {:subjects => @subjects}) %>
      </div>
      <div id="content">
        <%= yield %>
      </div>
      <div class="clear">
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Jayesh Jawale</p>
    </div>
  </body>
  <%= debug(params) %>
</html>