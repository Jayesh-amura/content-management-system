<!DOCTYPE html>
<html>
  <head>
    <title>Content Management | <%= @page_title || "Admin" %></title>
    <%= javascript_include_tag('application', 'data-turbolinks-tracks' => true) %>
    <%= stylesheet_link_tag('application', :media => 'all') %>

  </head>
  <body>
    <div id="header">
      <h1>Simple CMS Admin</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Jayesh Jawale</p>
    </div>
  </body>
  <%= debug(params) %>
</html>